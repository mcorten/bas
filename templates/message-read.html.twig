{% extends "base.html.twig" %}

{% block stylesheets %}

  <link href="{{ asset('styles/read.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
  <div class="form-container" data-controller="message-read">
    <form>
      <label>
        <input name="recipient" autocomplete="off" placeholder="Who may receive this message?"/>
      </label>
      <label>
        <input name="key" autocomplete="off" placeholder="Your secret key to access the message"/>
      </label>
      <label>
        <button type="submit">Read message</button>
      </label>
    </form>
    <label>
      <textarea name="text" disabled style="display: none;"></textarea>
    </label>

    <div id="error"></div>
  </div>
{% endblock %}

